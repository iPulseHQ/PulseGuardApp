{
  "expo": {
    "name": "PulseGuard",
    "slug": "pulseguard",
    "version": "3.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "pulseguard",
    "userInterfaceStyle": "automatic",
    "description": "PulseGuard - Server monitoring and uptime tracking",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pulseguard.app",
      "icon": "./assets/images/icon.png",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIStatusBarStyle": "UIStatusBarStyleDarkContent",
        "UIViewControllerBasedStatusBarAppearance": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.pulseguard.app",
      "versionCode": 10,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "WAKE_LOCK",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS",
        "android.permission.SCHEDULE_EXACT_ALARM"
      ],
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon-32x32.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#0f172a",
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "dark": {
            "backgroundColor": "#0f172a",
            "image": "./assets/images/splash-icon.png"
          }
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/android-chrome-192x192.png",
          "color": "#3b82f6",
          "defaultChannel": "default",
          "sounds": []
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "59793018-86dd-49b7-8947-53daa966fea2"
      }
    },
    "owner": "arjandenh07",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/59793018-86dd-49b7-8947-53daa966fea2",
      "fallbackToCacheTimeout": 3000,
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },
    "notification": {
      "icon": "./assets/images/android-chrome-192x192.png",
      "color": "#3b82f6",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "PulseGuard Alert"
    }
  }
}